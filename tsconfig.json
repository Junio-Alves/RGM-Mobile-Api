{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",              // Certifique-se de que está como ESNext
    "moduleResolution": "node",      // Para resolução de módulos compatível com Node.js
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
