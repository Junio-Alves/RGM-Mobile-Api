{
  "compilerOptions": {
    "moduleResolution": "node", 
    "target": "ES2020",             // Define a versão de saída do JavaScript
    "module": "ESNext",           // Garante que o Node.js entenda os módulos
    "outDir": "./dist",             // Pasta onde os arquivos compilados serão salvos
    "rootDir": "./src",             // Onde estão os arquivos `.ts` originais
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/services/Odoo/user.ts"],  // Inclui os arquivos da pasta src
  "exclude": ["node_modules"]  // Exclui node_modules da compilação
}
